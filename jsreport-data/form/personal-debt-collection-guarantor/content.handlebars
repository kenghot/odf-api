<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <style>
        {#asset /asset/bootstrap.min.css @encoding=utf8}
		{#asset /asset/main.css @encoding=utf8}

		@font-face {
				font-family: 'THSarabunNew';
				src: url({#asset /asset/THSarabunNew.ttf @encoding=dataURI});
				format('truetype');
		}

		* {
				font-family: 'THSarabunNew';
		}

		.border-fit-content {
			display: inline-block;
			border: 1px solid;
			padding-left: 18px;
			padding-right:18px;
			padding-top: 40px;
			padding-bottom: 40px;
